<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:print="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:minHeight="48dp"
    android:paddingLeft="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <CheckBox
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/node_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@+id/node_selector"
        android:id="@+id/arrow_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
         />

    <ImageView
        android:layout_marginLeft="5dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/arrow_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/icon"
        android:src="@drawable/week"/>
    <TextView
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/icon"
        android:text="Ngay 111 / 222/ 2222"
        android:id="@+id/tv_Ngay_Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/icon"
        android:text=""
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@+id/text"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center_vertical"
                android:text="TTiền: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_tongTien_of_Ngay"
                android:text="500k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="210dp"
        android:layout_toRightOf="@+id/text"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/but_add_pt"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/but_selector_add"/>
        <ImageView
            android:id="@+id/but_delete_day"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/but_add_pt"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/but_selector_delete"/>

    </LinearLayout>

</RelativeLayout>
