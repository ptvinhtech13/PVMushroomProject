<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:print="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:minHeight="56dp"
    android:paddingLeft="10dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/calendar"
        android:layout_alignParentLeft="true"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_toRightOf="@+id/icon"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="125dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="19dp"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_Month"
                android:text="TUẦN 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />2
            <TextView
                android:layout_centerVertical="true"
                android:textSize="10dp"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_day_Started"
                android:text="Started:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:textSize="10dp"
                android:textColor="@color/colorAccent"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_day_End"
                android:text="End:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="3dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng Tiền"
                />
            <TextView
                android:layout_gravity="center_horizontal"
                android:paddingTop="3dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_Money"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8888"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="270dp"
        android:layout_toRightOf="@+id/text"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/but_add_new_day"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/but_selector_add"/>
        <ImageView
            android:id="@+id/but_delete_week"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/but_add_new_day"
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/but_selector_delete"/>

    </LinearLayout>




</RelativeLayout>
