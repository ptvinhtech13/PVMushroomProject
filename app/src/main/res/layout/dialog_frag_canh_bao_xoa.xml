<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog">

    <TextView
        android:id="@+id/tv_tilte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CẢNH BÁO XÓA PHIẾU THU"
        android:background="@drawable/bg_title"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:textSize="25dp"/>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_tilte"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="@color/colorAccent"
            android:text="Bạn có muốn xóa Phiếu Thu này ko ? "/>
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/but_ok_delete"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_but_positive"
                android:textSize="30sp"
                android:textColor="@color/colorAccent"
                android:text="ĐỒNG Ý"/>
            <Button
                android:id="@+id/but_cannot_delete"
                android:layout_marginLeft="30dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_but_positive"
                android:textSize="30sp"
                android:textColor="@color/colorAccent"
                android:text="KHÔNG"/>
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>